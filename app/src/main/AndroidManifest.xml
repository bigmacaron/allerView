<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.catbox.allerview">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mina_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mina_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="ga.catcat.allerview.SearchActivity"></activity>
        <activity android:name=".Search" />
        <activity
            android:name="ga.catcat.allerview.Food_info"
            android:launchMode="singleTask" />
        <activity android:name="ga.catcat.allerview.MainActivity" />
        <activity android:name="ga.catcat.allerview.MyAllergyActivity" />
        <activity android:name="ga.catcat.allerview.EtcActivity" /> <!-- 스플레시 액티비티 -->
        <activity
            android:name="ga.catcat.allerview.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>